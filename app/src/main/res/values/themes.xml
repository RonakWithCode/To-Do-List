<resources>
    <!-- Base application theme. -->
    <style name="Theme.ToDolist" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>






    <!-- SetUp Screen -->
    <style name="SetUpScreenMainText">
        <item name="android:layout_marginTop">@dimen/_52sdp</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:textColor">@color/SetUpText</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>
    <style name="SetUpScreenButton">
        <item name="android:startColor">@color/purpul</item>
    </style>
    <style name="SetUpScreenText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:textColor">@color/SetUpText</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <style name="SetUpScreenSubText">
        <item name="android:layout_width">@dimen/_160sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:textColor">@color/SetUpSubText</item>
        <item name="android:textSize">@dimen/_19ssp</item>
    </style>
    <style name="SetUpScreenSubImages">
        <item name="android:layout_height">@dimen/_70sdp</item>
        <item name="android:layout_width">@dimen/_70sdp</item>
        <item name="android:layout_marginStart">@dimen/_30sdp</item>
        <item name="android:layout_marginTop">@dimen/_46sdp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>


    <!--new CategorySpinner box    -->
    <style name="CategorySpinnerAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <!-- Create a Due Date calendar Box -->
    <style name="Due_date_calender_box_TextView">

    </style>








</resources>